CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

.c.o:
	$(CC) -c $<

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean:
	rm -f *~ $(NAME)
	rm -f $(OBJ)

re: oclean all
warn:
	@if [! -f m.h ];
	then
	echo "m.h is missing"; 
	exit  1;
	fi
